import javax.sound.sampled.*;
import java.io.InputStream;


public class PlaySound {
    public static void main(String[] args) {
        try {
            // Use the class loader to access the sound file
            InputStream audioSrc = PlaySound.class.getClassLoader().getResourceAsStream("sound/buttonHover.wav");
            if (audioSrc == null) {
                throw new IllegalArgumentException("Sound file not found!");
            }

            // Convert InputStream to AudioInputStream
            AudioInputStream audioStream = AudioSystem.getAudioInputStream(audioSrc);

            // Get a clip for playback
            Clip clip = AudioSystem.getClip();
            clip.open(audioStream);
            clip.start();

            // Wait for the clip to finish playing
            System.out.println("Playing sound...");
            while (clip.isRunning()) {
                Thread.sleep(100);
            }

            // Clean up resources
            clip.close();
            audioStream.close();
            System.out.println("Playback finished.");
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
